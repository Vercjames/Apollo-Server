{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-var": ["warn"],
    "max-len": ["off"],
    "no-console": ["off"], // ON || WARN for final deployment check
    "linebreak-style": ["off"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "never"]
  }
}
