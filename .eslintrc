{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-var": ["warn"],
    "max-len": ["off"],
    "no-tabs": ["error"],
    "no-console": ["off"],
    "no-mixed-spaces-and-tabs": ["error"],
    "import/no-unresolved": ["off"],
    "import/no-import-module-exports": ["off"],
    "no-multiple-empty-lines": ["warn", {"max": 2}],
    "linebreak-style": ["off"],
    "arrow-body-style": ["off"],
    "semi": ["warn", "never"],
    "quotes": ["warn", "double"]
  }
}
